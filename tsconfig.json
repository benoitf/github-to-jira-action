{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "module": "node16",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./lib",
    "isolatedModules": true,
    "exactOptionalPropertyTypes": false,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"]
}
